<div class="container">
   <div id="users-index" class="row">
        <% @users.reverse.each do |user| %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 users-index">
                <div class="user-image">
                    <% if user.img_url %>
                        <%= image_tag user.img_url, width: "200px", class: "img-circle" %>
                    <% else %>
                        <%= image_tag user.image.url, width: "200px", class: "img-circle" %>
                    <% end %>
                </div>
                <p><%= link_to user.username, user_path(user) %></p>
            </div>
        <% end %>
    </div>
</div>  
