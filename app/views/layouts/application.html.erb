<!DOCTYPE html>
<html>
<head>
  <title>TransientsApp</title>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Lobster+Two|Source+Sans+Pro" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">TRANSIENTS</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
<!--            <li class="active"><a href="#">music<span class="sr-only">(current)</span></a></li>-->
            <li><%= link_to 'music', tracks_path(:category => :music) %></li>
            <li><%= link_to 'stories', tracks_path(:category => :stories) %></li>
            <li><%= link_to 'poetry', tracks_path(:category => :poetry) %></li>
            <li><%= link_to 'gratitude', tracks_path(:category => :gratitude) %></li>
            <li><%= link_to 'wishes', tracks_path(:category => :wishes) %></li>
            <li><%= link_to 'rants', tracks_path(:category => :rants) %></li>
            <li><%= link_to 'rubthelamp', tracks_path(:category => :random) %></li>
            <li><%= link_to 'users', users_path %></li>
          </ul>
          <form class="navbar-form navbar-right">
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
                  <li><%= link_to current_user.username, user_path(current_user) %>
                      &nbsp;&nbsp;&nbsp;&nbsp; </li>
              <li><%= link_to 'log out', session_path('dummy'), method: :delete %></li>
                <% else %>
                  <li><%= link_to 'log in', login_path %></li>
                  &nbsp;&nbsp;&nbsp;&nbsp;
                  <li><%= link_to 'sign up', new_user_path %></li>
                <% end %>
          </ul>
<!--
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Search">
            </div>
            <button type="submit" class="btn btn-default btn-group-xs">Submit</button>
-->
          </form>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    
<%= yield %>
   
    <div class="footer">
<!--      <p id="audio-player"><audio autoplay="autoplay" controls="controls" src="https://transientsapp-files.s3-us-west-1.amazonaws.com/tracks/audios/000/006/163/original/02_For_My_Friends.mp3?1478202201"></audio></p>-->
      <p id="audio-player">TRANSIENTS</p>
    </div>
    
    <script>
        function authToken() {
            return '<%= form_authenticity_token if protect_against_forgery? -%>';
        }
    </script>

  <script src="//cdnjs.cloudflare.com/ajax/libs/wavesurfer.js/1.0.52/wavesurfer.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
